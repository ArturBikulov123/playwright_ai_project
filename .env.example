# Environment Configuration for Playwright Test Framework
# Copy this file to .env and update values as needed

# Application Configuration
BASE_URL=https://www.saucedemo.com

# Test Execution Configuration
TIMEOUT=30000
EXPECT_TIMEOUT=10000
WORKERS=undefined
RETRIES=0
CI=false

# Logging Configuration
LOG_LEVEL=INFO
# Valid values: DEBUG, INFO, WARN, ERROR

# Screenshot Configuration
SCREENSHOT_MODE=only-on-failure
# Valid values: off, on, only-on-failure

# Video Configuration
VIDEO_MODE=retain-on-failure
# Valid values: off, on, on-first-retry, retain-on-failure

# Trace Configuration
TRACE_MODE=on-first-retry
# Valid values: off, on, on-first-retry

# Playwright Configuration
# PW_USE_HEADLESS_NEW=0  # Set to 0 to disable headless shell

# Health Check Configuration
# FAIL_ON_HEALTH_CHECK=true  # Set to true to fail setup if health check fails
